<aura:component>
    <aura:registerEvent name='childEvent' type='c:compEvent' />

    <aura:attribute name="latestInvoice" type="Invoice__c" />
    <aura:attribute name="modalIsOpen" type="Boolean" />

    <lightning:button class="slds-button slds-button_brand" onclick="{!c.toggleModal}" label="Update Latest Invoice" />
    <aura:if isTrue="{!v.modalIsOpen}">
        <section role="dialog" tabindex="-1" aria-modal="true" aria-labelledby="modal-heading-01" class="slds-modal slds-fade-in-open">
        <div class="slds-modal__container">
            <button class="slds-button slds-button_icon slds-modal__close slds-button_icon-inverse">
            <lightning:buttonIcon iconName="utility:close" onclick="{!c.toggleModal}" alternativeText="close" variant="bare-inverse" class="slds-modal__close"/>
            <span class="slds-assistive-text">Cancel and close</span>
            </button>
                <div class="slds-modal__header">
                <h1 id="modal-heading-01" class="slds-modal__title slds-hyphenate">Edit Latest Invoice</h1>
            </div>
            <div class="slds-modal__content slds-p-around_medium" id="modal-content-id-1">
                <lightning:recordEditForm recordId="{!v.latestInvoice.Id}" objectApiName="Invoice__c" onsuccess="{!c.handleUpdate}">
                    <lightning:messages />
                    <lightning:outputField fieldName="Name" />
                    <lightning:inputField fieldName="InvoiceDate__c" />
                    <lightning:inputField fieldName="Account__c" />      
                    <lightning:inputField fieldName="AmountWithVat__c" /> 
                    <lightning:inputField fieldName="Contact__c" />     
                    <lightning:inputField fieldName="AmountWithoutVat__c" /> 
                    <lightning:button class="slds-m-top_small" variant="brand" type="submit" name="update" label="Update" />
                </lightning:recordEditForm>
            </div>
        </div>
        </section>
        <div class="slds-backdrop slds-backdrop_open" role="presentation"></div>
    </aura:if>
</aura:component>